               <children>
                  <Label text="Corso:">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="cbCorsi" promptText="Corsi" />
               </children>
            </HBox>
            <HBox spacing="20.0">
               <children>
                  <Label text="Studente:">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtMatricola" promptText="Matricola..." />
                  <Button id="btnCss1" fx:id="btnCompleta" mnemonicParsing="false" onAction="#doCompleta" style="-fx-background-color: green; -fx-text-fill: white;" text="âˆš">
